{
  "name": "smart-tab-switcher",
  "version": "1.1.0",
  "description": "Fast tab switching and management for modern browsers (Chrome, Firefox, and Chromium-based browsers)",
  "scripts": {
    "dev:chrome": "webpack --mode development --watch --progress --env browser=chrome",
    "dev:firefox": "webpack --mode development --watch --progress --env browser=firefox",
    "build:chrome": "webpack --mode production --progress --env browser=chrome",
    "build:firefox": "webpack --mode production --progress --env browser=firefox",
    "build": "npm run build:chrome && npm run build:firefox",
    "type-check": "tsc --noEmit",
    "generate-icons": "node scripts/generate-icons.js",
    "prebuild": "npm run generate-icons"
  },
  "dependencies": {
    "copy-webpack-plugin": "^12.0.2",
    "fuse.js": "^6.6.2",
    "psl": "^1.15.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sharp": "^0.33.5",
    "tailwindcss": "^3.3.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/webextension-polyfill": "^0.10.0",
    "autoprefixer": "^10.4.0",
    "copy-webpack-plugin": "^9.0.1",
    "css-loader": "^6.7.0",
    "postcss": "^8.4.0",
    "postcss-loader": "^7.3.0",
    "style-loader": "^3.3.0",
    "tailwindcss": "^3.3.0",
    "ts-loader": "^9.4.0",
    "typescript": "^5.0.0",
    "webextension-polyfill": "^0.10.0",
    "webpack": "^5.80.0",
    "webpack-cli": "^5.0.0"
  }
}